{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
<!-- Header section -->
<header>
    <h1>
    <img src="https://www.wildcodeschool.com/assets/logo_main-e4f3f744c8e717f1b7df3858dce55a86c63d4766d5d9a7f454250145f097c2fe.png" alt="Wild Code School logo" />
    Les Argonautes
    </h1>
</header>

<!-- Main section -->
<main>

    <h2>Ajouter un(e) Argonaute</h2>
    <hr class="separate">
        <div >
            {{form_start(form)}}
            {{form_widget(form.nom)}}
            {# {{form_widget(form.save)}} #}
            {{form_end(form)}}
        </div>

    <!-- Member list -->

    <h2>Membres de l'équipage</h2>
    <hr class="separate">
    <div class="table">
        <section class="member-list container row">
            {% for membre in membres %}
                <div id="{{membre.id}}" class="col-4 col-lg-4 col-md-4">
                    {{membre.nom}}
                </div>
            {% endfor %}
        </section>
    </div>
</main>

<footer>
    <p>Réalisé par Jason en Anthestérion et Derache Lucas de l'an 515 avant JC à 2022 après JC</p>
</footer>
{% endblock %}
